{
  "name": "express-es6-rest-api",
  "version": "0.3.0",
  "description": "Starter project for an ES6 RESTful Express API",
  "main": "dist",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development nodemon -w src -w configuration --exec \"babel-node src\"",
    "build": "./node_modules/.bin/babel src --out-dir dist",
    "start": "node dist",
    "prestart": "npm run -s build",
    "lint": "eslint src --ignore-pattern node_modules/",
    "test": "npm run lint && npm run -s build && mocha && npm run clean",
    "package-upgrade": "npx npm-check-updates -u"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/therightstuff/express-es6-rest-api.git"
  },
  "author": "Jason Miller <jason@developit.ca>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "eslint": "^7.8.1",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  },
  "homepage": "https://github.com/therightstuff/express-es6-rest-api#readme"
}
